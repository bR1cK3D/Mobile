<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Sobre"
            android:layout_width="65dp"
            android:layout_height="22dp" android:id="@+id/sobre"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"/>
    <TextView
            android:text="Formação"
            android:layout_width="96dp"
            android:layout_height="23dp" android:id="@+id/formacao"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/sobre" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Experiência"
            android:layout_width="108dp"
            android:layout_height="24dp" android:id="@+id/experiencia"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/formacao" android:layout_marginStart="16dp"
            android:textColor="#1E1E1E"/>
    <TextView
            android:text="Objetivo"
            android:layout_width="93dp"
            android:layout_height="24dp" android:id="@+id/objetivo"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/experiencia" android:layout_marginStart="12dp"
    />
    <TextView
            android:text="Experiência"
            android:layout_width="92dp"
            android:layout_height="34dp" android:id="@+id/titulo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="128dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"/>
    <TextView
            android:text="Acadêmica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo" android:layout_marginTop="68dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>