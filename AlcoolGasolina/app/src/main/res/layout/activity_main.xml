<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saiba a melhor opção de abastecimento do seu carro!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintVertical_bias="0.433" android:id="@+id/textView2"/>
    <TextView
            android:text="Preso do alcool Ex. 1.90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.131"
            android:layout_marginTop="9dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <EditText
            android:layout_width="318dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/alcool"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.365"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <EditText
            android:layout_width="318dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/gasolina"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.365"
            android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="Preso do gasolina Ex. 2.60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.139" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/alcool"/>
    <Button
            android:text="Calcular"
            android:layout_width="339dp"
            android:layout_height="47dp"
            android:id="@+id/calcular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.472"
            android:layout_marginBottom="176dp"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/gasolina"
            app:layout_constraintVertical_bias="0.75"
            android:background="#F8F8F8"
            app:backgroundTint="@android:color/darker_gray"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/resposta"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            android:layout_marginBottom="112dp" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/calcular" app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>